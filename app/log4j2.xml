<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%p] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.aspectran" level="info" additivity="false">
        	<AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="com.aspectran.scheduler.adapter" level="debug" additivity="false">
        	<AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="org.quartz" level="debug" additivity="false">
        	<AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
