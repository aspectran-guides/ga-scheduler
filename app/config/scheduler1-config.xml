<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        An Aspectran Configuration that prints out the current time
        every five seconds using Aspectran Scheduler
    </description>

    <settings>
        <setting name="transletNamePattern" value="*.job"/>
        <setting name="defaultSchedulerBean" value="scheduler1"/>
    </settings>

    <bean id="scheduler1" class="com.aspectran.scheduler.support.QuartzSchedulerFactoryBean">
        <properties>
            <item type="properties" name="quartzProperties">
                <entry name="org.quartz.scheduler.instanceName">Scheduler-1</value>
                <entry name="org.quartz.scheduler.rmi.export">false</value>
                <entry name="org.quartz.scheduler.rmi.proxy">false</value>
                <entry name="org.quartz.scheduler.wrapJobExecutionInUserTransaction">false</value>
                <entry name="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</value>
                <entry name="org.quartz.threadPool.threadCount">10</value>
                <entry name="org.quartz.threadPool.threadPriority">5</value>
                <entry name="org.quartz.threadPool.threadsInheritContextClassLoaderOfInitializingThread">true</value>
                <entry name="org.quartz.jobStore.misfireThreshold">60000</value>
                <entry name="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</value>
            </item>
        </properties>
    </bean>

    <schedule id="schedule1">
        <scheduler>
            <trigger type="simple">
                intervalInSeconds: 5
                repeatCount: 2
            </trigger>
        </scheduler>
        <job translet="sample01.job"/>
    </schedule>

    <translet name="sample01">
        <action bean="scheduledTasks" method="reportCurrentTime"/>
        <transform type="transform/text">
            <template style="apon">
                |[schedule1-sample01-@{count}] @{msg}
            </template>
        </transform>
    </translet>

</aspectran>